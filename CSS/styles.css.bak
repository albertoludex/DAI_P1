/*ASPECTO BOTONES MENU*/

li {
  float: left;
  
}

li a.active{
	
	background-color: #b24a4c;
	color: white;
	
	
}

li a:hover(.active) {
  background-color: #b24a4c;
  color: white;

}

ul {
	
  
  list-style-type: none;
  padding: 0;
  overflow: hidden;
  background-color: #b24a4c;
  
  
}


li a {
  
  
  display: block;
  color: #FFFFFF;
  text-align: center;
  padding: 14px 16px;
	
  text-decoration: none;
}




